{
  "name": "telemedicine-hub-functions",
  "version": "1.0.0",
  "description": "Firebase Cloud Functions for Telemedicine Hub",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
